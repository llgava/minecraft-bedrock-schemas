{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/RecipesSchema",
  "definitions": {
    "RecipesSchema": {
      "type": "object",
      "properties": {
        "format_version": {
          "type": "string"
        },
        "minecraft:recipe_shaped": {
          "$ref": "#/definitions/RecipeShape"
        },
        "minecraft:recipe_shapeless": {
          "$ref": "#/definitions/RecipeShape"
        },
        "minecraft:recipe_brewing_container": {
          "$ref": "#/definitions/RecipeBrewing"
        },
        "minecraft:recipe_brewing_mix": {
          "$ref": "#/definitions/RecipeBrewing"
        },
        "minecraft:recipe_furnace": {
          "$ref": "#/definitions/RecipeFurnace"
        }
      },
      "required": ["format_version"],
      "additionalProperties": false,
      "$id": "llgava.behavior_packs.Recipes"
    },
    "RecipeShape": {
      "type": "object",
      "properties": {
        "description": {
          "$ref": "#/definitions/Description"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "const": "crafting_table"
          },
          "minItems": 1,
          "maxItems": 1
        },
        "pattern": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "pattern": "^[a-zA-Z0-9 !@#$%&]{3}$"
        },
        "key": {
          "$ref": "#/definitions/RecipeKey"
        },
        "result": {
          "$ref": "#/definitions/RecipeResult"
        },
        "group": {
          "type": "string"
        },
        "priority": {
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "Description": {
      "type": "object",
      "properties": {
        "identifier": {
          "type": "string",
          "pattern": "^(?:(?:(?!minecraft|minecon))+[a-z]*:[a-z_]*)+$"
        }
      },
      "required": ["identifier"],
      "additionalProperties": false
    },
    "RecipeKey": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/MinecraftRecipeItemProperties",
        "maxLength": 1
      }
    },
    "MinecraftRecipeItemProperties": {
      "type": "object",
      "properties": {
        "item": {
          "type": "string"
        },
        "count": {
          "type": "number"
        },
        "data": {
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "RecipeResult": {
      "type": "object",
      "properties": {
        "item": {
          "type": "string"
        },
        "data": {
          "type": "number"
        },
        "count": {
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "RecipeBrewing": {
      "type": "object",
      "properties": {
        "description": {
          "$ref": "#/definitions/Description"
        },
        "input": {
          "type": "string"
        },
        "output": {
          "type": "string"
        },
        "reagent": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "const": "brewing_stand"
          },
          "minItems": 1,
          "maxItems": 1
        }
      },
      "additionalProperties": false
    },
    "RecipeFurnace": {
      "type": "object",
      "properties": {
        "description": {
          "$ref": "#/definitions/Description"
        },
        "input": {
          "type": "string"
        },
        "output": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/MinecraftFurnaceRecipeTags"
          }
        }
      },
      "additionalProperties": false
    },
    "MinecraftFurnaceRecipeTags": {
      "type": "string",
      "enum": ["furnace", "blast_furnace", "smoker", "campfire", "soul_campfire"]
    }
  }
}
