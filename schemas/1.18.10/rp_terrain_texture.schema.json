{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/TerrainTextureSchema",
  "definitions": {
    "TerrainTextureSchema": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string"
        },
        "resource_pack_name": {
          "type": "string"
        },
        "texture_name": {
          "type": "string",
          "const": "atlas.terrain"
        },
        "num_mip_levels": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "number",
              "const": 4
            }
          ]
        },
        "padding": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "number",
              "const": 8
            }
          ]
        },
        "texture_data": {
          "$ref": "#/definitions/MinecraftTextureData"
        }
      },
      "required": [
        "num_mip_levels",
        "padding",
        "path",
        "resource_pack_name",
        "texture_data",
        "texture_name"
      ],
      "additionalProperties": false,
      "$id": "llgava.resource_packs.TerrainTexture"
    },
    "MinecraftTextureData": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/MinecraftTextures"
      }
    },
    "MinecraftTextures": {
      "type": "object",
      "properties": {
        "textures": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "$ref": "#/definitions/Textures"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "Textures": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string"
        },
        "overlay_color": {
          "type": "string",
          "pattern": "^#(?:[0-9a-fA-F]{3}){1,2}$"
        },
        "tint_color": {
          "type": "string",
          "pattern": "^#(?:[0-9a-fA-F]{3}){1,2}$"
        },
        "variations": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Variations"
          }
        }
      },
      "additionalProperties": false
    },
    "Variations": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string"
        },
        "weight": {
          "type": "number"
        }
      },
      "additionalProperties": false
    }
  }
}