{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/AnimationControllersSchema",
  "definitions": {
    "AnimationControllersSchema": {
      "type": "object",
      "properties": {
        "format_version": {
          "type": "string"
        },
        "animation_controllers": {
          "$ref": "#/definitions/AnimationController"
        }
      },
      "required": ["format_version", "animation_controllers"],
      "additionalProperties": false,
      "$id": "llgava.behavior_packs.AnimationControllers"
    },
    "AnimationController": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/AnimationControllerProperties",
        "pattern": "^(?:controller.animation.)+[a-z]+$"
      }
    },
    "AnimationControllerProperties": {
      "type": "object",
      "properties": {
        "initial_state": {
          "type": "string"
        },
        "states": {
          "$ref": "#/definitions/States"
        }
      },
      "additionalProperties": false
    },
    "States": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/StatesProperty"
      }
    },
    "StatesProperty": {
      "type": "object",
      "properties": {
        "animations": {
          "anyOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/MinecraftQueryAnimation"
              }
            }
          ]
        },
        "transitions": {
          "anyOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/MinecraftQueryAnimation"
              }
            }
          ]
        },
        "on_entry": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "on_exit": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "MinecraftQueryAnimation": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    }
  }
}
