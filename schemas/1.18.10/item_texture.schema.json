{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/ItemTextureSchema",
  "definitions": {
    "ItemTextureSchema": {
      "type": "object",
      "properties": {
        "resource_pack_name": {
          "type": "string"
        },
        "texture_name": {
          "type": "string",
          "const": "atlas.items"
        },
        "texture_data": {
          "$ref": "#/definitions/MinecraftTextureData"
        }
      },
      "required": [
        "resource_pack_name",
        "texture_name",
        "texture_data"
      ],
      "additionalProperties": false,
      "$id": "llgava.resource_packs.ItemTexture"
    },
    "MinecraftTextureData": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/MinecraftTextures"
      }
    },
    "MinecraftTextures": {
      "type": "object",
      "properties": {
        "textures": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "$ref": "#/definitions/Textures"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "Textures": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string"
        },
        "overlay_color": {
          "type": "string"
        },
        "tint_color": {
          "type": "string"
        },
        "variations": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Variations"
          }
        }
      },
      "additionalProperties": false
    },
    "Variations": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string"
        },
        "weight": {
          "type": "number"
        }
      },
      "additionalProperties": false
    }
  }
}