{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/SoundDefinitionsSchema",
  "definitions": {
    "SoundDefinitionsSchema": {
      "type": "object",
      "properties": {
        "format_version": {
          "type": "string"
        },
        "sound_definitions": {
          "$ref": "#/definitions/SoundDefinition"
        },
        "__use_legacy_max_distance": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "$id": "llgava.resource_packs.SoundsDefinition"
    },
    "SoundDefinition": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/SoundDefinitionProperties"
      }
    },
    "SoundDefinitionProperties": {
      "type": "object",
      "properties": {
        "category": {
          "$ref": "#/definitions/MinecraftSoundCategories"
        },
        "sounds": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SoundDefinitionProperty"
          }
        },
        "max_distance": {
          "type": "number"
        },
        "__use_legacy_max_distance": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "MinecraftSoundCategories": {
      "type": "string",
      "enum": [
        "ambient",
        "block",
        "bottle",
        "bucket",
        "hostile",
        "music",
        "neutral",
        "player",
        "record",
        "ui",
        "weather"
      ]
    },
    "SoundDefinitionProperty": {
      "type": "object",
      "properties": {
        "volume": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "array",
              "items": {
                "type": "number"
              },
              "minItems": 2,
              "maxItems": 2
            }
          ]
        },
        "pitch": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "array",
              "items": {
                "type": "number"
              },
              "minItems": 2,
              "maxItems": 2
            }
          ]
        },
        "is3D": {
          "type": "boolean"
        },
        "name": {
          "type": "string"
        },
        "weight": {
          "type": "number"
        },
        "load_on_low_memory": {
          "type": "boolean"
        },
        "stream": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    }
  }
}
