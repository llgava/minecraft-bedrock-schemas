{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/ManifestSchema",
  "definitions": {
    "ManifestSchema": {
      "type": "object",
      "properties": {
        "format_version": {
          "type": "number",
          "const": 2
        },
        "header": {
          "$ref": "#/definitions/Header"
        },
        "modules": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Modules"
          }
        },
        "dependencies": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Dependencies"
          }
        },
        "metadata": {
          "$ref": "#/definitions/Metadata"
        },
        "capabilities": {
          "$ref": "#/definitions/Capabilities"
        }
      },
      "required": [
        "format_version",
        "header",
        "modules"
      ],
      "additionalProperties": false,
      "$id": "llgava.global.Manifest"
    },
    "Header": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "version": {
          "anyOf": [
            {
              "type": "array",
              "items": {
                "type": "number"
              },
              "minItems": 3,
              "maxItems": 3
            },
            {
              "type": "array",
              "minItems": 3,
              "items": [
                {
                  "type": "number",
                  "const": 1
                },
                {
                  "type": "number",
                  "const": 0
                },
                {
                  "type": "number",
                  "const": 0
                }
              ],
              "maxItems": 3
            }
          ]
        },
        "base_game_version": {
          "anyOf": [
            {
              "type": "array",
              "items": {
                "type": "number"
              },
              "minItems": 3,
              "maxItems": 3
            },
            {
              "type": "array",
              "minItems": 3,
              "items": [
                {
                  "type": "number",
                  "const": 1
                },
                {
                  "type": "number",
                  "const": 18
                },
                {
                  "type": "number",
                  "const": 0
                }
              ],
              "maxItems": 3
            }
          ]
        },
        "min_engine_version": {
          "anyOf": [
            {
              "type": "array",
              "items": {
                "type": "number"
              },
              "minItems": 3,
              "maxItems": 3
            },
            {
              "type": "array",
              "minItems": 3,
              "items": [
                {
                  "type": "number",
                  "const": 1
                },
                {
                  "type": "number",
                  "const": 16
                },
                {
                  "type": "number",
                  "const": 0
                }
              ],
              "maxItems": 3
            }
          ]
        },
        "lock_template_options": {
          "type": "boolean"
        },
        "uuid": {
          "$ref": "#/definitions/UUID"
        }
      },
      "required": [
        "name",
        "description",
        "version",
        "uuid"
      ],
      "additionalProperties": false
    },
    "UUID": {
      "type": "string"
    },
    "Modules": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/MinecraftManifests"
        },
        "version": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 3,
          "maxItems": 3
        },
        "uuid": {
          "$ref": "#/definitions/UUID"
        }
      },
      "required": [
        "type",
        "version",
        "uuid"
      ],
      "additionalProperties": false
    },
    "MinecraftManifests": {
      "type": "string",
      "enum": [
        "resources",
        "data",
        "client_data",
        "interface",
        "world_template"
      ]
    },
    "Dependencies": {
      "type": "object",
      "properties": {
        "uuid": {
          "$ref": "#/definitions/UUID"
        },
        "version": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 3,
          "maxItems": 3
        }
      },
      "required": [
        "uuid",
        "version"
      ],
      "additionalProperties": false
    },
    "Metadata": {
      "type": "object",
      "properties": {
        "authors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "license": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      },
      "required": [
        "authors",
        "license",
        "url"
      ],
      "additionalProperties": false
    },
    "Capabilities": {
      "type": "object",
      "properties": {
        "chemistry": {
          "type": "boolean"
        },
        "experimental_custom_ui": {
          "type": "boolean"
        },
        "raytraced": {
          "type": "boolean"
        }
      },
      "required": [
        "chemistry",
        "experimental_custom_ui",
        "raytraced"
      ],
      "additionalProperties": false
    }
  }
}