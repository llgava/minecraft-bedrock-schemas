{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    "rootDir": ".",
    "baseUrl": "./src",
    "paths": {
      "@minecraft/*": ["./minecraft/*"],
      "@models/*": ["./models/*"],
      "@types/*": ["./types/*"]
    }
  },

  "include": ["src/"],
  "exclude": ["scripts/"]
}
