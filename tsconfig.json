{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",

    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": false,

    "rootDir": ".",
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["./models/*"],
      "@utils/*": ["./utils/*"]
    }
  },

  "include": ["./src"]
}
