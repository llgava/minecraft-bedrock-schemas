{
  "format_version": "1.17.0",
  "minecraft:block": {
    "description": {
      "identifier": "llgava:test",
      "is_experimental": false,
      "register_to_creative_menu": true,
      "properties": {
        "llgava:test_property": [0, 1, 2]
      }
    },

    "permutations": [
      {
        "condition": "query.block_property('llgava:test_property') == 1",
        "components": {
          "minecraft:pick_collision": { "size": [16, 8, 16] }
        }
      }
    ],

    "components": {
      "minecraft:material_instances": {
        "*": {
          "render_method": "alpha_test",
          "texture": "block_texture"
        }
      },

      "minecraft:on_interact": {
        "condition": "query.get_equipped_item_name == stick",
        "event": "llgava:test_event_in_sequence",
        "target": "self"
      },

      "minecraft:display_name": "Test Block",
      "minecraft:geometry": "geometry.stone",
      "minecraft:map_color": "#FF00FF"
    },

    "events": {
      "llgava:test_event": {
        "run_command": {
          "command": ["say Hello, I'm a block!"],
          "target": "block"
        }
      },

      "llgava:test_event_in_sequence": {
        "sequence": [
          { "die": { "target": "self" }},
          { "play_sound": { "sound": "mob.zombie.hurt", "target": "self" }}
        ]
      }
    }
  }
}
