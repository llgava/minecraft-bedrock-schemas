{
  "files.exclude": {
    "**/.babelrc.js": true,
    "**/.editorconfig": true,
    "**/.eslintrc.json": true,
    "**/tsconfig.json": true,
    "**/LICENSE": true,
    "**/.gitignore": true,
    "**/jest.config.js": true
  },

  "json.schemas": [
    // Behavior Packs Manifest
    {
      "fileMatch": [
        "__addon__/bp/manifest.json",
        "behavior_packs/*/manifest.json",
        "development_behavior_packs/*/manifest.json"
      ],

      "url": "./schemas/manifest_behavior.schema.json"
    },

    // Behavior Packs Manifest
    {
      "fileMatch": [
        "__addon__/rp/manifest.json",
        "resource_packs/*/manifest.json",
        "development_resource_packs/*/manifest.json"
      ],

      "url": "./schemas/manifest_resource.schema.json"
    },

    // Blocks
    {
      "fileMatch": [
        "__addon__/bp/blocks/*.json",
        "behavior_packs/*/blocks/*.json",
        "development_behavior_packs/*/blocks/*.json"
      ],

      "url": "./schemas/blocks_behavior.schema.json"
    },

    // Items
    {
      "fileMatch": [
        "__addon__/bp/items/*.json",
        "behavior_packs/*/items/*.json",
        "development_behavior_packs/*/items/*.json"
      ],

      "url": "./schemas/items_behavior.schema.json"
    },
  ]
}
