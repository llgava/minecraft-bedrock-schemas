{
  "files.exclude": {
    "**/.babelrc.js": false,
    "**/.editorconfig": false,
    "**/.eslintrc.json": false,
    "**/tsconfig.json": false,
    "**/LICENSE": false,
    "**/.gitignore": false,
    "**/jest.config.js": false
  },

  "json.schemas": [
    // Manifests
    {
      "fileMatch": [
        "__addon__/bp/manifest.json",
        "behavior_packs/*/manifest.json",
        "development_behavior_packs/*/manifest.json"
      ],

      "url": "./schemas/manifest.schema.json"
    },

    // Blocks Behavior
    {
      "fileMatch": [
        "__addon__/bp/blocks/*.json",
        "behavior_packs/*/blocks/*.json",
        "development_behavior_packs/*/blocks/*.json"
      ],

      "url": "./schemas/blocks_behavior.schema.json"
    },

    // Items Behavior
    {
      "fileMatch": [
        "__addon__/bp/items/*.json",
        "behavior_packs/*/items/*.json",
        "development_behavior_packs/*/items/*.json"
      ],

      "url": "./schemas/items_behavior.schema.json"
    },
  ]
}
