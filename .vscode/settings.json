{
  "files.exclude": {
    "**/.editorconfig": true,
    "**/yarn.lock": true,
    "**/package-lock.json": true,
    "**/.vscode/": false
  },

  "json.schemas": [
    // Behavior Packs Manifest
    {
      "fileMatch": [
        "__tests__/bp/manifest.json",
        "behavior_packs/*/manifest.json",
        "development_behavior_packs/*/manifest.json"
      ],

      "url": "./schemas/bp_manifest.schema.json"
    },

    // Behavior Packs Manifest
    {
      "fileMatch": [
        "__tests__/rp/manifest.json",
        "resource_packs/*/manifest.json",
        "development_resource_packs/*/manifest.json"
      ],

      "url": "./schemas/rp_manifest.schema.json"
    },

    // Blocks
    {
      "fileMatch": [
        "__tests__/bp/blocks/*.json",
        "behavior_packs/*/blocks/*.json",
        "development_behavior_packs/*/blocks/*.json"
      ],

      "url": "./schemas/bp_blocks.schema.json"
    },

    // Items
    {
      "fileMatch": [
        "__tests__/bp/items/*.json",
        "behavior_packs/*/items/*.json",
        "development_behavior_packs/*/items/*.json"
      ],

      "url": "./schemas/bp_items.schema.json"
    },
  ]
}
