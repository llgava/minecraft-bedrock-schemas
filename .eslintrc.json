{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],

  "env": {
    "es2020": true,
      "node": true
  },

  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],

  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },

  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
